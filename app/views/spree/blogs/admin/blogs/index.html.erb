<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= t(:listing_blogs) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= link_to_with_icon('icon-plus', t(".new_blog"), new_admin_blog_url, :id => 'new_image_link', :class => 'button') %></li>
<% end %>

<div id="images"></div>

<table class="index">
  <colgroup>
    <col style="width: 40%">
    <col style="width: 40%">
    <col style="width: 20%">
  </colgroup>
  <thead>
  <tr>
      <th><%= sort_link @search, :name, t("activerecord.attributes.blog.name") %></th>
      <th><%= sort_link @search, :live, t("activerecord.attributes.blog.permalink") %></th>
      <th class="actions"></th>
  </tr>
  </thead>
  <tbody>
    <%- @collection.each do |blog|%>
    <tr id="<%= dom_id blog %>">
      <td><%= blog.name %></td>
      <td><%= blog.permalink %></td>
      <td class="actions">
        <%= link_to_with_icon 'icon-edit', t(:edit), edit_admin_blog_url(blog), :no_text => true, :data => {:action => 'edit'} %>
        &nbsp;
        <%= link_to_delete blog, { :url => admin_blog_url(blog), :no_text => true } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @collection %>
